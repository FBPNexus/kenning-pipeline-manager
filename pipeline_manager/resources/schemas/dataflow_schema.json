{
    "$id": "dataflow_schema",
    "description": "Schema used to validate dataflows",
    "type": "object",
    "properties": {
        "version": {
            "description": "Version of the dataflow",
            "type": "string"
        },
        "metadata": {
            "$ref": "metadata_schema"
        },
        "graphTemplateInstances": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "graph_schema"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "interfaces": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Unique identifier of the interface within the subgraph"
                                        },
                                        "nodePosition": {
                                            "type": "object",
                                            "properties": {
                                                "x": {
                                                    "description": "x coordinate of the top left interface corner",
                                                    "type": "number"
                                                },
                                                "y": {
                                                    "description": "y coordinate of the top left interface corner",
                                                    "type": "number"
                                                }
                                            },
                                            "required": [
                                                "x",
                                                "y"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "nodePosition"
                                    ]
                                }
                            }
                        }
                    }
                ]
            }
        },
        "graph": {
            "$ref": "graph_schema"
        },
        "entryGraph": {
            "description": "Id of a subgraph that is displayed when a dataflow is loaded. It is only used for subgraphs",
            "type": "string"
        }
    },
    "oneOf": [
        {
            "required": [
                "graph"
            ]
        },
        {
            "required": [
                "entryGraph",
                "graphTemplateInstances"
            ]
        }
    ],
    "unevaluatedProperties": false
}
