{
    "$id": "dataflow_schema.json",
    "description": "Schema used to validate dataflows",
    "type": "object",
    "properties": {
        "version": {
            "description": "Version of the dataflow",
            "type": "string"
        },
        "metadata": {
            "$ref": "metadata_schema.json"
        },
        "subgraphs": {
            "type": "array",
            "items": {
                "$ref": "graph_schema.json"
            }
        },
        "graph": {
            "oneOf": [
                {
                    "$ref": "graph_schema.json"
                },
                {
                    "type": "object",
                    "properties": {
                        "entryGraph": {
                            "description": "Id of a subgraph that is displayed when a dataflow is loaded. It is only used for subgraphs",
                            "type": "string"
                        },
                        "name": {
                            "description": "Name of the node type as defined in the specification",
                            "type": "string"
                        }
                    },
                    "required": [
                        "entryGraph"
                    ]
                }
            ],
            "unevaluatedProperties": false
        }
    },
    "required": [
        "graph"
    ],
    "unevaluatedProperties": false
}