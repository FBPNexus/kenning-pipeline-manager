{
    "$id": "dataflow_schema.json",
    "description": "Schema used to validate dataflows",
    "type": "object",
    "properties": {
        "version": {
            "description": "Version of the dataflow",
            "type": "string"
        },
        "metadata": {
            "$ref": "metadata_schema.json"
        },
        "graphs": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/graph_with_ids"
            },
            "unevaluatedProperties": false
        },
        "entryGraph": {
            "description": "Id of a graph that is displayed when a dataflow is loaded",
            "type": "string"
        }
    },
    "required": [
        "graphs"
    ],
    "unevaluatedProperties": false,
    "$defs": {
        "graph_with_ids": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "graph_schema.json"
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "description": "Unique identifier of a graph",
                            "type": "string"
                        },
                        "nodes": {
                            "description": "Definition of the available nodes with ids set",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "description": "Unique identifier of a node",
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "id"
                                ]
                            }
                        },
                        "connections": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Unique identifier of a connection"
                                    }
                                },
                                "required": [
                                    "id"
                                ]
                            }
                        }
                    },
                    "required": [
                        "id"
                    ]
                }
            ],
            "unevaluatedProperties": false
        }
    }
}